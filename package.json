{
  "name": "dream-app-poc",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:netlify": "netlify dev",
    "build:functions": "tsup netlify/functions --dts=false --format=cjs --outDir .netlify/functions-built --splitting=false",
    "watch:functions": "cross-env CHOKIDAR_USEPOLLING=1 WATCHPACK_POLLING=true tsup netlify/functions --watch --dts=false --format=cjs --outDir .netlify/functions-built --splitting=false",
    "dev:functions": "npm-run-all -p watch:functions serve:functions",
    "serve:functions": "netlify functions:serve --port 9999",
    "dev:web": "next dev",
    "dev:full": "npm-run-all -p dev:functions dev:web",
    "build": "npm run build:functions && next build",
    "start": "next start",
    "clean": "rimraf .netlify node_modules .netlify/functions-built",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:unit": "vitest"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "next": "^14.2.18",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "remark-toc": "^9.0.0",
    "unified": "^11.0.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@netlify/blobs": "^8.1.0",
    "@netlify/functions": "^2.8.2",
    "@netlify/plugin-nextjs": "^5.7.4",
    "@playwright/test": "^1.48.2",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^22",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "eslint": "^8",
    "eslint-config-next": "^14.2.18",
    "netlify-cli": "^17.37.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.0",
    "tailwindcss": "^3.4.14",
    "tsup": "^8.0.0",
    "typescript": "^5",
    "vitest": "^2.1.4"
  }
}
